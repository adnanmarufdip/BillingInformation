@model IEnumerable<BillingInformation.Models.ProductModel>

@{
    var jsonData = ViewBag.productData;
}

<div class="row justify-content-center" id="billing">
    <div class="col-12">
        <form id="myForm">
            <div class="upperSection">
                <div class="form-group row">
                    <label for="date" class="col-md-2 col-form-label">Date</label>
                    <div class="col-md-4">
                        <input type="date" class="form-control" id="date" disabled>
                    </div>
                    <label for="time" class="col-md-2 col-form-label">Time</label>
                    <div class="col-md-4">
                        <input type="time" class="form-control" id="time" disabled>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="item" class="col-md-2 col-form-label">Item</label>
                    <div class="col-md-4">
                        <select class="form-control" id="item">
                        </select>
                    </div>
                    <label for="unit-price" class="col-md-2 col-form-label">Price/Unit</label>
                    <div class="col-md-4">
                        <input type="number" class="form-control" id="unitprice" disabled>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="quantity" class="col-md-2 col-form-label">Quantity</label>
                    <div class="col-md-4">
                        <input type="number" class="form-control" id="quantity" step="1">
                    </div>
                    <label for="amount" class="col-md-2 col-form-label">Amount</label>
                    <div class="col-md-4">
                        <input type="number" class="form-control" id="amount" disabled>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary" id="addToBill">Add To Bill</button>
                        <button type="reset" class="btn btn-secondary" id="reset">Reset</button>
                    </div>
                </div>
            </div>
            <div class="midSection">
                <table class="table table-striped" id="billTable">
                    <thead class="thead-dark">
                        <tr>
                            <th>Item</th>
                            <th>Quantity</th>
                            <th>Price/Unit</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <div class="lowerSection">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="subtotal">Sub Total:</label>
                            <input type="number" class="form-control" id="subtotal" disabled>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="discount">Discount:</label>
                            <input type="text" class="form-control" id="discount">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="vat">VAT:</label>
                            <input type="text" class="form-control" id="vat">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="grandtotal">Grand Total:</label>
                            <input type="number" class="form-control" id="grandtotal" disabled>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary">Amount Paid &amp; Add New Bill</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>

    var productData = @Html.Raw(jsonData);

</script>


